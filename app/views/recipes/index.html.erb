<div class="row clearfix">
    <div class="col-md-9 col-md-offset-1 column">
        <h1>Oppskrifter</h1>
    </div>
    <div class="col-md-2  column">
        <%= link_to 'Ny oppskrift', new_recipe_path, :class => "btn btn-default btn-xs", :method => :get %>
    </div>
</div>

    <% @recipes.each do |recipe| %>
    <div class="row clearfix">
        <div class="col-md-2 col-md-offset-2 column">
            <%= image_tag recipe.img_1, width: '100%' %>
        </div>
        <div class="col-md-4 column">
            <%= link_to recipe.title, recipe %>
        </div>
    </div>

    <% end %>

