
<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	  <%= f.label :meal %><br>
	  <%= f.number_field :meal_id %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :ingress %><br>
    <%= f.text_field :ingress %>
  </div>
  <div class="field">
     <%= t('procedure') %><br>
    <%= f.text_area :body, :cols => 50, :rows => 14 %>
  </div>
  <div class="field">
    <%= f.label :prepare_time %><br>
    <%= f.number_field :prepare_hours %> <%= f.number_field :prepare_minutes %>
  </div>
  <div class="field">
    <%= f.label :cooking_time %><br>
    <%= f.number_field :cooking_hours %> : <%= f.number_field :cooking_minutes %>
  </div>
  <div class="field">
    <%= f.label :servings %><br>
    <%= f.text_field :servings %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  
  <div id ="rein_ingredients">
	  <strong>Ingredienser:</strong>
	    <% @recipe.re_ins.each do |rein| %><li>  <%= rein.amount %> <%=rein.unit%> <%= rein.ingredient.name %></li>
	  <% end %>
  </div>
<% end %>

