
<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	  <%= f.label :meal %><br>
	  <%= f.collection_select :meal_id, Meal.order('title ASC').all, :id, :title, {:class => 'selectpicker', :include_blank => '-- Velg rett --'} %>
	  
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
	<%= collection_select(:recipe, :category_id, Category.order('name ASC').all, :id, :name, {:class => 'selectpicker', :include_blank => '-- Velg kategori --'}) %>
  </div>
  <div class="field">
    <%= f.label :type_id %><br>
	<%= collection_select(:recipe, :type_id, Type.order('name ASC').all, :id, :name, {:class => 'selectpicker', :include_blank => '-- Velg type --'}) %>
  </div>
  <div class="field">
    <%= f.label :commodity_id %><br>
	<%= collection_select(:recipe, :commodity_id, Commodity.order('name ASC').all, :id, :name, {:class => 'selectpicker', :include_blank => '-- Velg rÃ¥vare --'}) %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :ingress %><br>
    <%= f.text_field :ingress %>
  </div>
  <div class="field">
     <%= t('procedure') %><br>
    <%= f.text_area :body, :class => 'ckeditor', :cols => 50, :rows => 14 %>
	<!-- f.cktext_area :body, rows: 10 -->
	
  </div>
  <div class="field">
    <%= f.label :prepare_time %><br>
    <%= f.number_field :prepare_hours %> <%= f.number_field :prepare_minutes %>
  </div>
  <div class="field">
    <%= f.label :cooking_time %><br>
    <%= f.number_field :cooking_hours %> : <%= f.number_field :cooking_minutes %>
  </div>
  <div class="field">
    <%= f.label :servings %><br>
    <%= f.text_field :servings %>
  </div>
  <div class="actions">
    <%= f.submit "Lagre oppskriften", class: "btn btn-large btn-primary" %>
  </div>
  

<% end %>

