								<% end %>
								<li class="divider">
								</li>
								<%
									Category.all.each do |category|
								%>
								<li>
									<a href="/recipes?category=<%= category.id %> "><%= category.name %></a>
								</li>
								<% end %>
							</ul>
						</li>
					</ul>

